<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MadRentalActivity"
    >

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Mad Rental"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:textSize="50dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:textColor="@color/colorTextButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Mes réservations"
        android:textSize="25dp"
        android:textAllCaps="false"
        tools:layout_editor_absoluteY="99dp"
        tools:ignore="MissingConstraints" />




    <Button
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:textColor="@color/colorTextButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Mon profil"
        android:textSize="25dp"
        android:textAllCaps="false"
        tools:layout_editor_absoluteY="172dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="Lancer une recherche : "
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="253dp"
        tools:ignore="MissingConstraints"/>

    <Button
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg_rounded_corners"
        android:text="Date de début de réservation"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorTextButton2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18dp"
        android:paddingLeft="30dp"
        android:gravity="bottom"
        tools:layout_editor_absoluteY="292dp"
        />

    <Button
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:text="Date de fin de réservation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:textColor="@color/colorTextButton2"
        tools:layout_editor_absoluteY="348dp"
        android:background="@drawable/button_bg_rounded_corners"
        android:gravity="bottom"
        android:paddingLeft="30dp"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:text="Rechercher"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/colorTextButton"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="428dp" />
</android.support.constraint.ConstraintLayout>