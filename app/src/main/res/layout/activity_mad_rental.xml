<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MadRentalActivity"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Mad Rental"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="60dp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BTNmesresa"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/background"
        android:text="Mes réservations"
        android:textAllCaps="false"
        android:textColor="@color/colorTextButton"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/BTNprofil"
        android:layout_width="296dp"
        android:layout_height="48dp"
        android:background="@drawable/background"
        android:text="Mon profil"
        android:textAllCaps="false"
        android:textColor="@color/colorTextButton"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BTNmesresa"
        android:layout_marginTop="20dp"
         />

    <TextView
        android:id="@+id/txtrech"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="Lancer une recherche : "
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BTNprofil"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/INPdebut"
        android:layout_width="355dp"
        android:layout_height="40dp"
        android:inputType="date"
        android:hint="Date de début de réservation"
        android:textColor="@color/colorTextButton2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18dp"
        android:paddingLeft="30dp"
        android:background="@drawable/radiusbutton"
        android:gravity="fill"
        app:layout_constraintTop_toBottomOf="@+id/txtrech"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/INPfin"
        android:layout_width="355dp"
        android:layout_height="40dp"
        android:hint="Date de fin de réservation"
        android:inputType="date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:textColor="@color/colorTextButton2"
        android:gravity="fill"
        android:paddingLeft="30dp"
        android:background="@drawable/radiusbutton"
        app:layout_constraintTop_toBottomOf="@+id/INPdebut"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/BTNrech"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:text="Rechercher"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textColor="@color/colorTextButton"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/INPfin"
        android:layout_marginTop="20dp"
        />

</android.support.constraint.ConstraintLayout>
</ScrollView>