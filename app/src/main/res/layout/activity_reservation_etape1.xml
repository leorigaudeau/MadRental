<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationEtape1">

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buggy"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/titreprofil"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <ImageView
        android:id="@+id/imagebuggy"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorTextButton2"
        app:layout_constraintTop_toBottomOf="@+id/titre"/>

    <TextView
        android:id="@+id/prixIntil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:text="Prix :"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagebuggy" />

    <TextView
        android:id="@+id/prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="36dp"
        android:text="29€/jour"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagebuggy" />
    <TextView
        android:id="@+id/categInti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catégorie :"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prixIntil"
        />

    <TextView
        android:id="@+id/categ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="36dp"
        android:text="G"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prix" />
    <TextView
        android:id="@+id/equipInt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipements :"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categInti"
        />
    <TextView
        android:id="@+id/equip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="36dp"
        android:text="Panner"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categ" />
    <TextView
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="25dp"
        android:text="OPTIONS"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equipInt"
        android:background="@color/bgoptions"
        />

    <TextView

        android:id="@+id/options1txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Mitrailleuse : 29 €"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equipInt" />

    <Switch
        android:id="@+id/btnopt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/options1txt"
        app:layout_constraintTop_toTopOf="@+id/options1txt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="52dp" />


    <TextView
        android:id="@+id/options2txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Lance-flamme : 49 €"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equipInt" />
    <Switch
        android:id="@+id/btnopt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/options2txt"
        app:layout_constraintTop_toTopOf="@+id/options2txt"
        tools:layout_editor_absoluteX="52dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/BTNvalider"
        android:layout_width="296dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background"
        android:text="Valider"
        android:textAllCaps="false"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options" />


</android.support.constraint.ConstraintLayout>
</ScrollView>